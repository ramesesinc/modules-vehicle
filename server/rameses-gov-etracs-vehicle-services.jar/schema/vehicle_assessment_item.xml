<schema adapter="vehicledb">
	<element tablename="vehicle_assessment_item">
		<field name="objid" primary="true" prefix="VAPPF"/>
		<field name="amount" required="true" />
		<field name="amtpaid" required="true" />
		<field name="balance" expr="amount - amtpaid" />

		<complex name="item" ref="vehicle_itemaccount" jointype="many-to-one" required="true">
			<key field="itemid" target="objid" />
		</complex>	

		<complex name="parent" ref="vehicle_assessment" jointype="many-to-one" includefields="appid,year">
			<key field="parentid" target="objid"/>
		</complex>	
	</element>
</schema>